@model UsuarioModel

@{
    Layout = "_LayoutExterno";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <div class="app-brand justify-content-center">
                    <a href="index.html" class="app-brand-link gap-2">
                        <img src="~/lib/img/logo.png" alt="" />
                        <span class="app-brand-text demo text-body fw-bolder">Crear Cuenta</span>
                    </a>
                </div>

                @if(ViewBag.Mensaje != null)
                { 
                    <div class="alert alert-primary text-center">
                        @ViewBag.Mensaje
                    </div>
                }

                <form id="FormRegistro" class="mb-3" asp-action="Registro" asp-controller="Home">
                    <div class="mb-3">
                        <label for="username" class="form-label">Identificación</label>
                        <input type="text" class="form-control" asp-for="Identificacion" onkeyup="ConsultarNombre();" />
                    </div>

                    <div class="mb-3">
                        <label for="username" class="form-label">Nombre</label>
                        <input type="text" class="form-control" asp-for="Nombre" readonly="readonly" />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" asp-for="CorreoElectronico" />
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <label class="form-label" for="password">Contraseña</label>
                        <input type="password" class="form-control" asp-for="Contrasenna" />
                    </div>
                    <button class="btn btn-primary d-grid w-100" type="submit">Procesar</button>
                </form>

                <p class="text-center">
                    <span>Ya tienes una cuenta?</span>
                    <a asp-controller="Home" asp-action="Index">
                        <span>Iniciar Sesión</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Registro.js" asp-append-version="true"></script>