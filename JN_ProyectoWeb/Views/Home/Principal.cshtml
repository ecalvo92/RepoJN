@model IEnumerable<UsuarioModel>

@{
    Layout = "_LayoutInterno";
}

<div class="mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <h4 class="text-center mb-4">Tiendas</h4>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card tienda-card h-70 shadow-sm">
                        <img class="card-img-top"
                             src="@($"{item.ImagenComercial}{item.ConsecutivoUsuario}.png")"
                             onerror="this.src='/img/default.png'"
                             style="height:140px; object-fit:contain;" />

                        <div class="card-body-images text-center">
                            <h6 class="card-title mb-2">@item.NombreComercial</h6>
                            <h6 class="card-title mb-2">@item.Nombre</h6>

                            <a class="btn btn-primary btn-sm mt-2"
                               asp-controller="Producto"
                               asp-action="VerProductosTienda"
                               asp-route-id="@item.ConsecutivoUsuario">
                                Ver productos
                            </a>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>