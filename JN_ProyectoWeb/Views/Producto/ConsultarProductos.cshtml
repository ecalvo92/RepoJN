@model IEnumerable<ProductoModel>

@{
    Layout = "_LayoutInterno";
}

<div class="card mb-4 mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="text-center flex-grow-1 m-0">Productos</h4>
        <a asp-action="AgregarProductos" asp-controller="Producto" class="btn btn-outline-primary ms-3">
            Agregar
        </a>
    </div>

    <div class="card-body">

        <table id="tabla" class="table mb-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Estado</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ConsecutivoProducto</td>
                        <td>@item.Nombre</td>
                        <td>¢ @item.Precio.ToString("N2")</td>
                        <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                        <td><img src="@($"{item.Imagen}{item.ConsecutivoProducto}.png")" width="110" height="90" /></td>
                        <td>
                            <a asp-controller="Producto" asp-action="ActualizarProductos" asp-route-id="@item.ConsecutivoProducto">
                                <i class="fa fa-edit" style="font-size:22px;"></i>
                            </a>

                            <a href="#" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                               data-id="@item.ConsecutivoProducto" data-name="@item.Nombre" data-status="@item.Estado"
                               data-bs-toggle="tooltip"
                               title="@(item.Estado ? "Desactivar" : "Activar")">

                                <i class="fa @(item.Estado ? "fa-toggle-on" : "fa-toggle-off")"
                                   style="font-size:22px; color:@(item.Estado ? "green" : "red");">
                                </i>

                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <h6 id="modal-message" class="text-info fw-bold text-center"></h6>
            </div>

            <div class="modal-footer">

                <form class="mb-3" asp-action="CambiarEstado" asp-controller="Producto">
                    <input type="hidden" id="ConsecutivoProducto" name="ConsecutivoProducto">
                    <button id="btnProcesar" type="submit" class="btn btn-primary">Procesar</button>
                </form>

            </div>
        </div>
    </div>
</div>

<script src="~/js/ConsultarProductos.js" asp-append-version="true"></script>