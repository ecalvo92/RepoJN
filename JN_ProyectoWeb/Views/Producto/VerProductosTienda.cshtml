@model IEnumerable<ProductoModel>

@{
    Layout = "_LayoutInterno";
}

<div class="mt-4">

    @if (ViewBag.Mensaje != null)
    {
        <div class="alert alert-primary text-center">
            @ViewBag.Mensaje
        </div>
    }

    
    <h4 class="text-center mb-4">
        <a asp-action="Principal" asp-controller="Home">Tiendas > </a>
        @Model.FirstOrDefault()!.NombreComercial
    </h4>

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card tienda-card h-70 shadow-sm">
                        <img class="card-img-top"
                             src="@($"{item.Imagen}{item.ConsecutivoProducto}.png")"
                             onerror="this.src='/img/default.png'"
                             style="object-fit:contain;" />

                        <div class="card-body-images text-center">
                            <h6 class="card-title mb-2">Producto: @item.Nombre</h6>
                            <h6 class="card-title mb-2">Detalle: @item.Descripcion</h6>
                            <h6 class="card-title mb-2">Precio: $@item.Precio.ToString("N2")</h6>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/ConsultarTiendas.js" asp-append-version="true"></script>

<style>
    .tienda-card {
        transition: transform .2s ease, box-shadow .2s ease;
        border-radius: 10px;
    }

        .tienda-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }
</style>